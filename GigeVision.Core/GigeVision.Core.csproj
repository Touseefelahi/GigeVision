<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Authors>Touseef Elahi</Authors>
    <Company>Stira.sa</Company>
    <Product>GigeVision</Product>
    <Description>
      Simple GigE Vision Implementation (x64 platform only)
    </Description>
    <PackageTags>GigeVision, GeniCam, GVSP, GVCP</PackageTags>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.3.4</Version>
    <PackageLicenseFile>License.txt</PackageLicenseFile>
    <PackageIcon>gige.png</PackageIcon>
    <PackageIconUrl />
    <Platforms>AnyCPU;x64;x86</Platforms>
    <PackageReleaseNotes>Improved GVSP Reception using raw sockets and Span&lt;byte&gt;</PackageReleaseNotes>
    <LangVersion>8.0</LangVersion>
    <Configurations>Debug;Release;PublishLocally</Configurations>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>\GigeVision.Core\GigeVision.Core.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="build\GigeVision.Core.targets">
      <PackagePath>build/</PackagePath>
      <Pack>true</Pack>
    </None>
    <None Include="gige.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="Licenses\License.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Include="$(MSBuildThisFileDirectory)\runtimes\win-x64\native\StreamRxCpp.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>runtimes\win-x64\native\StreamRxCpp.dll</Link>
      <Pack>True</Pack>
      <Visible>false</Visible>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Include="$(MSBuildThisFileDirectory)\runtimes\win-x86\native\StreamRxCpp.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>runtimes\win-x86\native\StreamRxCpp.dll</Link>
      <Pack>True</Pack>
      <Visible>false</Visible>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Stira.WpfCore" Version="1.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="PresentationFramework">
      <HintPath>..\..\..\..\..\..\Program Files (x86)\Reference Assemblies\Microsoft\Framework\.NETFramework\v4.7.2\PresentationFramework.dll</HintPath>
    </Reference>
  </ItemGroup>
</Project>